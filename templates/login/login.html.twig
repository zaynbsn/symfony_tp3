{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="min-h-screen flex items-center" style="background-color: antiquewhite">
            <div class="w-full">
                <h2 class="text-center font-bold text-2xl uppercase mb-10">Se connecter</h2>
                <div class="bg-white p-10 rounded-lg shadow md:w-3/4 mx-auto lg:w-1/2">
                    <div class="mb-5">
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control border border-gray-300 shadow p-3 w-full rounded mb-2"  autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-5">

                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control border border-gray-300 shadow p-3 w-full rounded mb-2" autocomplete="current-password" required>
                    </div>
                    <button class="block w-full font-bold p-4 rounded-lg" style="background-color: antiquewhite">Ajouter</button>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
